{
  "name": "account",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/account/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/account",
        "index": "apps/account/src/index.html",
        "main": "apps/account/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "apps/account/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/account/public"
          }
        ],
        "styles": [
          "apps/account/src/styles.scss"
        ],
        "scripts": [],
        "customWebpackConfig": {
          "path": "apps/account/webpack.config.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "apps/account/webpack.prod.config.ts"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4204,
        "publicHost": "https://localhost:4204"
      },
      "configurations": {
        "production": {
          "buildTarget": "account:build:production",
          "ssl": true,
          "sslKey": "./certs/localhost.key",
          "sslCert": "./certs/localhost.crt"
        },
        "development": {
          "buildTarget": "account:build:development",
          "ssl": true,
          "sslKey": "./certs/localhost.key",
          "sslCert": "./certs/localhost.crt"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "account:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/account/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "defaultConfiguration": "production",
      "options": {
        "buildTarget": "account:build",
        "port": 4204,
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "account:build:development"
        },
        "production": {
          "buildTarget": "account:build:production"
        }
      }
    }
  }
}
